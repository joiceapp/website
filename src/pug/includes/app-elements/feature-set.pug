// App features section
section#features
    .container.px-5
        .row.gx-5.align-items-center
            .col-lg-8.order-lg-1.mb-5.mb-lg-0
                .container-fluid.px-5
                    .row.gx-5
                        .col-md-6.mb-5
                            .text-center
                                i.bi.bi-tree.icon-feature.text-gradient.d-block.mb-3
                                h4.font-alt Open Air Konzert
                                p.text-muted.mb-0 Veranstalte ein Open Air Konzert, mit unbegrenzt Teilnehmern!
                        .col-md-6.mb-5
                            .text-center
                                i.bi.bi-puzzle.icon-feature.text-gradient.d-block.mb-3
                                h4.font-alt Brettspieleabend
                                p.text-muted.mb-0 Kennst du &bdquo;Azul&rdquo;? Entdecke neue Brettspiele über joice!
                    .row
                        .col-md-6.mb-5.mb-md-0
                            .text-center
                                i.bi.bi-film.icon-feature.text-gradient.d-block.mb-3
                                h4.font-alt Kinoabend?
                                p.text-muted.mb-0 Gib einen Kinoabend und zeig deinen Lieblingsfilm!
                        .col-md-6
                            .text-center
                                i.bi.bi-trophy.icon-feature.text-gradient.d-block.mb-3
                                h4.font-alt Gib das perfekte Dinner
                                p.text-muted.mb-0 Zeig allen deine Kochkünste und gib das perfekte Dinner!
            .col-lg-4.order-lg-0
                // Features section device mockup
                .features-device-mockup
                    include gradient-circle
                    include shape-1
                    include shape-2
                    .device-wrapper
                        .device(data-device='iPhoneX', data-orientation='portrait', data-color='black')
                            .screen.bg-black
                                span.device-text.font-alt.text-black Early Access
                                video(muted='muted', autoplay='', loop='', style='max-width: 100%; height: 100%;')
                                    source(src='assets/img/app_early_access_screens.mp4', type='video/mp4')