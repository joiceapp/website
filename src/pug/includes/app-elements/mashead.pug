// Mashead header
header.masthead
    .container.px-5
        .row.gx-5.align-items-center
            .col-lg-6
                // Mashead text and app badges
                .mb-5.mb-lg-0.text-center.text-lg-start
                    h1.display-1.lh-1.mb-3.headline joice 
                    p.lead.fw-normal.text-muted.mb-5 Keine Lust mehr alleine zu kochen und einen langweiligen Abend zu verbringen?
                        br
                        br
                        | joice ist jetzt als Early Access für Android verfügbar!
                    .d-flex.flex-column.flex-lg-row.align-items-center
                        a.me-lg-3.mb-4.mb-lg-0(href='https://play.google.com/store/apps/details?id=com.joiceapp.app')
                            img.app-badge.android(src='assets/img/google-play-badge.svg', alt='Link to Playstore' title='Jetzt herunterladen!')
                        a(href='#!')
                            img.app-badge.ios(src='assets/img/app-store-badge.svg', alt='Link to App Store' title='Noch nicht verfügbar!')
            .col-lg-6
                // Masthead device mockup feature
                .masthead-device-mockup
                    include gradient-circle
                    include shape-1
                    include shape-2
                    .device-wrapper
                        .device(data-device='iPhoneX', data-orientation='portrait', data-color='black')
                            .screen.bg-black
                                span.device-text.font-alt.text-black Early Access
                                video(muted='muted', autoplay='', loop='', style='max-width: 100%; height: 100%;')
                                            source(src='assets/img/app_early_access_start.mp4', type='video/mp4')
